pipeline {
    agent any
     tools {
        LocalMaven'apache-maven-3.8.1' 
    }
    
    stages {
           stage('Build Application') {
            steps {
                sh 'mvn -f java-tomcat-sample/pom.xml clean package'
            }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
       
    }
}
